<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.angelone.apiframework</groupId>
  <artifactId>apiframework</artifactId>
  <name>apiframework</name>
  <version>0.0.1</version>
  <description>creating framework for api</description>
  <build>
    <finalName>apiframework</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.0.0-M5</version>
        <configuration>
          <reuseForks>false</reuseForks>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.angelone.api.BaseTest</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>ApiHealthCheck</id>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <artifactId>maven-surefire-plugin</artifactId>
              <version>3.0.0-M5</version>
              <configuration>
                <suiteXmlFiles>
                  <suiteXmlFile>ApiSyntheticMonitoringSuite.xml</suiteXmlFile>
                </suiteXmlFiles>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>
  </profiles>
  <properties>
    <extentreport.version>5.0.8</extentreport.version>
    <maven.compiler.source>17</maven.compiler.source>
    <appium.java.version>7.6.0</appium.java.version>
    <assertjcore.version>3.24.1</assertjcore.version>
    <jackson.version>2.14.1</jackson.version>
    <junit.jupiter.version>5.8.2</junit.jupiter.version>
    <restassured.version>5.3.0</restassured.version>
    <joda.version>2.10.13</joda.version>
    <lombok.version>1.18.28</lombok.version>
    <maven.compiler.target>17</maven.compiler.target>
    <testng.version>7.7.1</testng.version>
    <noexception.version>1.6.2</noexception.version>
    <reflection.version>0.10.2</reflection.version>
    <owner.version>1.0.12</owner.version>
  </properties>
</project>

